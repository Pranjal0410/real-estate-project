# ==========================================
# Real Estate Investment Platform Environment Configuration
# ==========================================
# This is an example .env file. Copy this to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=realestate_db
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Server Configuration
SERVER_PORT=9090
SERVER_CONTEXT_PATH=/

# JWT Security Configuration
JWT_SECRET=generate_a_secure_random_string_at_least_256_bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Razorpay Payment Gateway Configuration
RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXX
RAZORPAY_KEY_SECRET=XXXXXXXXXXXXXXXXXX

# Email Configuration
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-16-char-app-password
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_FROM=noreply@yourdomain.com

# OpenAI Configuration
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXX
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150

# Application Configuration
APP_NAME=Real Estate Investment Management System
APP_FRONTEND_URL=http://localhost:9090
APP_FILE_UPLOAD_DIR=uploads/
APP_REPORT_OUTPUT_DIR=reports/

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SECURITY=INFO
LOG_LEVEL_SQL=INFO
LOG_FILE_NAME=logs/application.log

# Environment Type
SPRING_PROFILES_ACTIVE=development